<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:text="@string/help_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpView1" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/hit"
            app:srcCompat="@drawable/hit"
            android:padding="20dp"
            android:id="@+id/imageView" />

        <TextView
            android:text="@string/help_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpView2" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/compass"
            app:srcCompat="@drawable/compass"
            android:padding="20dp"
            android:id="@+id/imageView2" />

        <TextView
            android:text="@string/help_text_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/helpView3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/roll"
            app:srcCompat="@drawable/roll"
            android:padding="20dp"
            android:id="@+id/imageView3" />

    </LinearLayout>
</ScrollView>